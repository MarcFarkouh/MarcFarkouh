y=y+1
--This allows the turtle to keep track of time, and the time the customer has stayed--
  if y=y+1 then
  print("Room 1, your stay is over")
  end
    if y=y+5 then
    print("Room 2, your stay is over")
    end
      if y=y+7 then
      print("Room 3, your stay is over")
      end
